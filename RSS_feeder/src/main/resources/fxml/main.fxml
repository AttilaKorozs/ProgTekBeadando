<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.rssreader.controller.MainController"
            stylesheets="@style.css"
            style="-fx-background-color: #f4f4f4;">

    <left>
        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <Button text="Feedek" onAction="#onShowFeeds" styleClass="menu-button"/>
            <Button text="Cikkek" onAction="#onShowArticles" styleClass="menu-button"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 20;" />
    </center>
</BorderPane>
